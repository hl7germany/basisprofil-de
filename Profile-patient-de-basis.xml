  <differential>
    <element id="Patient">
      <path value="Patient" />
      <short value="Informationen über ein Individuum, das Gesundheitsleistungen erhält." />
      <definition value="Demografische und andere administrative Informationen über ein Individuum, das Behandlungs- oder andere gesundheitsbezogene Leistungen erhält." />
    </element>
    <element id="Patient.identifier">
      <path value="Patient.identifier" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Patient.identifier:VersichertenID_GKV">
      <path value="Patient.identifier" />
      <sliceName value="VersichertenID_GKV" />
      <short value="Die Krankenversichertennummer wie auf der eGK abgebildet." />
      <definition value="Die Krankenversichertennummer wie auf der eGK abgebildet." />
      <requirements value="Die gesetzliche Krankenversichertennummer ist ein zentrales Identififaktionsmerkmal im deutschen Gesundheitswesen." />
      <max value="1" />
    </element>
    <element id="Patient.identifier:KrankenversichertennummerGKV.type.coding">
      <path value="Patient.identifier.type.coding" />
      <min value="1" />
      <max value="1" />
    </element>
    <element id="Patient.identifier:KrankenversichertennummerGKV.type.coding.system">
      <path value="Patient.identifier.type.coding.system" />
      <min value="1" />
    </element>
    <element id="Patient.identifier:KrankenversichertennummerGKV.type.coding.code">
      <path value="Patient.identifier.type.coding.code" />
      <min value="1" />
    </element>
    <element id="Patient.identifier:KrankenversichertennummerGKV.system">
      <path value="Patient.identifier.system" />
      <comment value="Die Versicherten-ID ist der 10-stellige unveränderliche Teil der 30-stelligen Krankenversichertennummer." />
      <min value="1" />
      <fixedUri value="http://fhir.de/NamingSystem/gkv/kvid-10" />
    </element>
    <element id="Patient.identifier:KrankenversichertennummerGKV.value">
      <path value="Patient.identifier.value" />
      <min value="1" />
    </element>
    <element id="Patient.name">
      <path value="Patient.name" />
      <definition value="A human's name with the ability to identify parts and usage.  " />
      <type>
        <code value="HumanName" />
        <profile value="http://fhir.de/StructureDefinition/humanname-de-basis" />
      </type>
    </element>
    <element id="Patient.address">
      <path value="Patient.address" />
      <type>
        <code value="Address" />
        <profile value="http://fhir.de/StructureDefinition/address-de-basis" />
      </type>
    </element>
    <element id="Patient.contact.name">
      <path value="Patient.contact.name" />
      <type>
        <code value="HumanName" />
        <profile value="http://fhir.de/StructureDefinition/humanname-de-basis" />
      </type>
    </element>
    <element id="Patient.contact.address">
      <path value="Patient.contact.address" />
      <type>
        <code value="Address" />
        <profile value="http://fhir.de/StructureDefinition/address-de-basis" />
      </type>
    </element>
    <element id="Patient.animal">
      <extension url="http://hl7.org/fhir/StructureDefinition/structuredefinition-explicit-type-name">
        <valueString value="Animal" />
      </extension>
      <path value="Patient.animal" />
      <comment value="Die verterinärmedizinische Profilierung von FHIR is außerhalb des Scopes der Basisprofile" />
      <max value="0" />
    </element>
    <element id="Patient.managingOrganization">
      <path value="Patient.managingOrganization" />
      <type>
        <code value="Reference" />
        <targetProfile value="StructureDefinition/organization-de-basis" />
      </type>
    </element>
